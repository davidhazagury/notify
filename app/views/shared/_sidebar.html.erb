  <div class="side-menu">
    <div class="user-info-side-menu">
      <%= current_user.first_name.upcase + "'S NOTES" %>
    </div>
    <div class="sidebar-btn">
      <%= link_to "New folder", new_user_folder_path(current_user.id), class: "cta-main-btn" %>
    </div>
    <div class="folders-tabs">
      <ul class="folder-lsit">
          <% current_user.folders.each do |folder| %>
            <% if Folder.first.id == folder.id %>
              <li class="folder active">
                <%= link_to folder.folder_name, folder_notes_path(folder.id), class: "link-side-bar" %>
              </li>
            <% else %>
              <li class="folder">
                <%= link_to folder.folder_name, folder_notes_path(folder.id), class: "link-side-bar" %>
              </li>
            <% end %>
          <% end %>
      </ul>
    </div>
    <div class="log-out-div-wrapper">
      <%= link_to "Log Out", destroy_user_session_path,  :method => 'delete', class: "log-out-btn"  %>
    </div>
  </div>
